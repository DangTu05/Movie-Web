extends ../layouts/index.pug
//- include thanh phân trang
include ../mixins/pagination.pug 
//- block styles 
//-   link(rel='stylesheet', href='/assets/css/admin/permission.css')
include ../partials/sidebar
include ../partials/header

block content 
  .container.mt-5
    .card.shadow.p-4
      h2.mb-4(style="margin-top: 15px;")= data.title||"Danh Sách Bài Viết"
      .table-responsive
        table.table.table-bordered.table-hover.text-center.align-middle
          thead.table-light
            tr
              th Tiêu Đề
              th Người Đăng Bài
              th Ngày Đăng
              th Thao Tác
          tbody
            if data.articles && data.articles.length > 0
              for article in data.articles
                tr
                  td= article.title || ""
                  td Đặng Quang Tú
                  td= article.created_at || ""
                  td
                    a(href=`update-article/${article._id}`, style="margin-right: 5px;").btn.btn-sm.btn-primary Sửa
                    a(href=`admin/article/delete-article/${article._id}`, class="delete").btn.btn-sm.btn-danger Xóa
              //  Thêm các dòng phim khác tại đây 
      //- Thanh phân trang
      +pagination(data)
block scripts
  script(type="module", src="/js/shared/pagination.js")
  script(type="module", src="/js/admin/script.js") 

